<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">

            <body>
                <br><br>

                <h3>Create new Listing</h3>
                <br><br>

                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input name="listing[title]" type="text" class="form-control" placeholder="Add a Catchy Title" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" id="" cols="30" rows="10" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>

                   
                    <div class="mb-3">
                        <label for="image" class="form-lable">upload image</label>
                        <input name="listing[image]" type="file" class="form-control" placeholder="Enter image URL" required>
                        
                       
                    </div>
                    
                    <div class="row">
                    <div class="col-md-4">   
                    <div class="mb-3">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]"  class="form-control"placeholder="Enter Price" required>
                        <div class="invalid-feedback">price should be valid!</div>
                    </div>
                </div>
                <div class="col-md-8"> 
                    <div class="mb-3">
                        <label for="country" class="form-lable">Country</label>
                        <input name="listing[country]" type="text" class="form-control" placeholder="India" required>
                        <div class="invalid-feedback">country should be valid!</div>
                    </div>
                   </div> 
                </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input name="listing[location]" type="text" class="form-control" placeholder="Jaipur,Rajastan" required>
                        <div class="invalid-feedback">Location should be valid!</div>
                    </div>
                    
                    <button class="btn btn-dark mt-3">Add</button>
                    
                </form>

            </body>
        </div>
    </div>